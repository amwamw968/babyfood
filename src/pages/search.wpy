<style lang="sass">
  @import "../assets/styles/index.sass";
  .header_fixed
    position: fixed
    left: 0
    top: 0
    z-index: 10
    width: 100%
    background: #f4f4f4

  .search_container
    display: flex
    line-height: 72rpx

  .search_box
    display: flex
    width: 100%
    height: 72rpx
    line-height: 72rpx
    background: #fff
    border-radius: 6px

    >.search_ipt
      flex: 1
      margin-top: 6rpx
      height: 60rpx
      font-size: 28rpx
      padding-left: 10px

    >.search_icon
      width: 60rpx
      text-left: center

  .order_list
    padding-left: 20rpx
    height: 80rpx
    display: flex
    line-height: 80rpx
    background: #fff
    border-top: 1px #ececec solid
    border-bottom: 1px #ececec solid

    >.item
      text-align: center
      width: 120rpx
      font-size: 28rpx

      .icon
        vertical-align: middle
        width: 30rpx
        height: 30rpx

  .goods_list
    margin-top: 200rpx
    padding: 20rpx 10rpx
    width: 100%
    min-height: 80vh
    background: #fff
    font-size: 0

  .goods_card
    margin: 10rpx
    padding: 20rpx
    width: calc(50% - 20rpx)
    display: inline-block
    border: 1px #ececec solid

    >.image
      margin-bottom: 5px
      width: 100%
      // height: 320rpx
      height: 380rpx

    >.price
      margin-bottom: -10rpx
      height: 40rpx
      line-height: 40rpx

    >.subtitle
      height: 38rpx
      line-height: 38rpx
</style>

<template lang="pug">
view.container
  view.header_fixed
    Container.search_container(topBottom="10")
      view.search_box.flex1
        input.search_ipt(
          @input="bindKeyword"
          placeholder="搜索商品"
          placeholder-style="color: #999"
          focus="{{isFocus}}"
          value="{{keyword}}"
          confirm-type="search"
          @confirm="handleSearch"
        )
        wxc-icon.search_icon(wx:if="{{keyword}}" type="close" size="26" @tap="clearKeyword" color="#999")

      view.fz28.ml20(wx:if="{{keyword}}" @tap="handleSearch") 搜索
      navigator.fz28.ml20(wx:else open-type="navigateBack" delta="1") 取消

    view.order_list
      view.item(class="{{sort === 'default' ? 'color' : ''}}" @tap="changeSort(default)")
        text 综合
      view.item(class="{{sort === 'sale' ? 'color' : ''}}" @tap="changeSort(sale)")
        text 销量
      view.item(class="{{sort === 'price' ? 'color' : ''}}" @tap="changeSort(price)")
        text 价格
        image.icon(wx-if="{{orderByImg}}" src="/assets/image/{{orderByImg}}.png")

  InfiniteScroll(
    @loadMore.user="loadMore"
    :scrollDisabled.sync="scrollDisabled"
    :isNothing.sync="isNothing"
  )
    view.goods_list
      navigator.goods_card(wx:for="{{goodeList}}" wx:key open-type="navigate" url="/pages/goods/index?goods_id={{item.goods_id}}")
        image.image(src="{{item.head_img}}?imageView2/2/w/380" mode="aspectFit")
        view.ellipsis.fz24.c333 {{item.ingredient_name}}
        view.ellipsis.fz20.orange.subtitle {{item.amount}}
        view.price
          wxc-price.color.fz32(value="{{item.price / 100}}")
          text.fr.fz20.c999 99.9%好评
  wxc-toast.toast(icon='no') 该场景下暂无商品
</template>

<script>
  import wepy from 'wepy'
  import Container from '@/components/Container'
  import InfiniteScroll from '@/components/InfiniteScroll'
  import { Debounce } from '../api/util'

  export default class Search extends wepy.page {
    config = {
      navigationBarTitleText: '搜索',
      usingComponents: {
        'wxc-icon': '../../packages/@minui/wxc-icon/dist/index',
        'wxc-price': '../../packages/@minui/wxc-price/dist/index',
        'wxc-toast': '../../packages/@minui/wxc-toast/dist/index',
      },
    }

    components = {
      Container,
      InfiniteScroll,
    }

    watch = {
      keyword() {
        this.page_num = 1
        this.goodeList = []
        this.scrollDisabled = false
        this.isNothing = false
        this.goods_parent_category_id = ''
        this.goods_child_category_id = ''
        this.brand_id = ''
        this.sort = 'default'
        this.sort_type = true
        this.fetchData()
      },

      sort(value) {
        if (value !== 'price') {
          this.sort_type = true
        }
        this.page_num = 1
        this.goodeList = []
        this.scrollDisabled = false
        this.isNothing = false
        this.fetchData()
      },

      sort_type() {
        if (this.sort !== 'price') return
        this.page_num = 1
        this.goodeList = []
        this.scrollDisabled = false
        this.isNothing = false
        this.fetchData()
      }
    }

    computed = {
      orderByImg() {
        if (this.sort === 'price') {
          return this.sort_type ? 'icon_order_down' : 'icon_order_top'
        }
        return 'icon_order_default'
      },
    }

    data = {
      isFocus: false,
      goodeList: [],
      page_num: 1,
      scrollDisabled: false,
      isNothing: false,
      keyword: '',
      goods_parent_category_id: '',
      goods_child_category_id: '',
      brand_id: '',
      sort: 'default', // 排序：default：综合-默认，sale：销量，price：价格
      sort_type: true, // 高->低：desc => true，低到高：asc => false
      ingredient_name:[],
      amount:[],
    }

    onLoad({goods_parent_category_id = '', goods_child_category_id = '', brand_id = ''}, {from}) {
      if (from.$name === 'Index') this.isFocus = true
      this.goods_parent_category_id = goods_parent_category_id
      this.goods_child_category_id = goods_child_category_id
      this.brand_id = brand_id
      if (goods_parent_category_id || goods_child_category_id || brand_id) this.fetchData()
    }

    fetchData() {
      const data = {
        keyword: this.keyword
        /*goods_parent_category_id: this.goods_parent_category_id,
        goods_child_category_id: this.goods_child_category_id,
        brand_id: this.brand_id,
        page_num: this.page_num,
        sort: this.sort,
        sort_type: this.sort_type ? 'desc' : 'asc',*/
      }

      /*
      * url: 'http://www.luliangdev.cn/api/books?type=hot&major=%E7%8E%84%E5%B9%BB&page=1',
        method: 'GET',
        header: {
          'access-token': 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJuYW1lIjoiYWFhIiwiaWF0IjoxNTI4MjA3MDQ0LCJleHAiOjE1MzA3OTkwNDR9.nABN2tnZfrkA9Cz-cdpFCnd58BQN-QfWgr7RgLBgNvA',
          'app-type': 'wx-app'
        },
        dataType: 'json'
      * */

      wepy.request({
        url: 'http://127.0.0.1:3000/recipe',
        method: 'GET',
        header: {
          'Content-Type': 'application/json',
          'charset': 'UTF-8'
        },
        data: data
      }).then(res => {

        //this.goodeList = [...this.goodeList, ...res.data] ;
        console.log(res.data.rows)
        this.goodeList = [...this.goodeList, ...res.data.rows] ;

        /*if (res.cur_page === res.total_pages) {
          this.scrollDisabled = true
          this.isNothing = true
        } else {
          this.scrollDisabled = false
        }*/
        this.$apply()
      })
    }

    _toggleToast() {
      const $toast = this.$wxpage.selectComponent('.toast')
      $toast && $toast.show()
    }

    methods = {
      loadMore() {
        this.page_num++
        this.scrollDisabled = true
        this.fetchData()
      },

      bindKeyword: Debounce(e => {
        this.keyword = e.detail.value.trim()
        this.$apply()
      }, 500, true),

      clearKeyword() {
        this.keyword = ''
      },

      changeSort(sort) {
        this.sort = sort
        if (sort === 'price') {
          this.sort_type = !this.sort_type
        } else {
          this.sort_type = true
        }
      },
    }
  }
</script>
